// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Game {
  id       String  @id @default(uuid())
  title    String
  slug     String  @unique
  imageUrl String?

  mods Mod[]
}

model Mod {
  id       String     @id @default(uuid())
  name     String
  gameId   String
  game     Game       @relation(fields: [gameId], references: [id])
  imageUrl String?
  entries  ModEntry[]
}

model ModEntry {
  id          String @id @default(uuid())
  version     String
  gameVersion String
  filePath    String
  modId       String
  mod         Mod    @relation(fields: [modId], references: [id])
}
