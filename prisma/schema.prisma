// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Plataform {
  PC
  XBOX
  PS5
}

model Game {
  id         String      @id @default(uuid())
  title      String
  slug       String      @unique
  plataforms Plataform[]
  thumbUrl   String?
}
